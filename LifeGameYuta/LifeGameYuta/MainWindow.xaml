<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Properties="clr-namespace:LifeGameYuta.Properties" x:Class="LifeGameYuta.MainWindow"
        Title="LifeGame" Height="350" Width="525" Name="mainwin">

    <Grid Loaded="Grid_Loaded">
        <Menu HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="525" Margin="0,0,-6.333,0">
            <MenuItem Header="File" Height="25" Width="50">
                <MenuItem Header="読み込み" HorizontalAlignment="Left" Width="130"
					Click="Read_Click"/>
                <MenuItem Header="終了" HorizontalAlignment="Left" Width="130"
					Click="Exit_Click"/>
            </MenuItem>
        </Menu>
        <Button Name="startStopButton" HorizontalAlignment="Left" 
                Margin="10,35,0,0" VerticalAlignment="Top" 
                Width="30" Height="30" Click="StartandStop_Click">
            <StackPanel Orientation="Horizontal" Margin="0" >
                <Image Source="images/startandstop.jpg"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
